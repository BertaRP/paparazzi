<!DOCTYPE module SYSTEM "module.dtd">

<module name="opa_controller_ap" dir="boards">
  <doc>
    <description>Controller for OPA-AP board functionalities</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="Board">
         <dl_setting var="opa_controller_ap_vision_power" min="0" step="1" max="1" shortname="vision_pwr" values="OFF|ON" />
         <dl_setting var="opa_controller_ap_ftd_disarm" min="0" step="1" max="1" shortname="ftd_disarm" values="NONE|DISARM" module="boards/opa_controller_ap" handler="do_disarm" />
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="opa_controller_ap.h"/>
  </header>
  <init fun="opa_controller_ap_init()"/>
  <periodic fun="opa_controller_ap_periodic()" freq="20" autorun="TRUE"/>
  <makefile>
    <file name="opa_controller_ap.c"/>
  </makefile>
</module>

